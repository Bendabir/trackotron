root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 4

[*.{py, pyi}]
indent_style = space
indent_size = 4
max_line_length = 88

[*.md]
indent_style = space
indent_size = 2

[*.ini]
indent_style = space
indent_size = 4
